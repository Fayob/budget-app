<h2>Transaction pages</h2>

<% if @transacts.empty? %>
  <p>You have no transaction in this category</p>
<% else %>
  <% sum = 0 %>
  <% @transacts.each do |transact| %>
    <% sum += transact.amount %>
  <% end %>
  <h4>Total Amount Spent: $<%= sum %> </h4>
  <div>
    <% @transacts.each do |transact| %>
    <h5> <%= transact.name %> </h5>
    <h6>Amount: $<%= transact.amount %>  </h6>
  <% end %>
  </div>
<% end %>
<%= link_to 'Add transaction', new_category_transact_path %>