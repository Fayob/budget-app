<%= link_to categories_path do %>
  <i class="bi bi-arrow-left-circle-fill position-absolute top-0 ms-2 mt-3" style="font-size: 2rem; color: white;"></i>
<% end %>

<h1 class="text-center">Create New Category</h1>
<% if @category.errors.any? %>
  <h2>The following errors prevent the post from being saved</h2>
  <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @categories, url: categories_path, local: true, class: 'mx-4 px-2' do |form| %>
  <div class='field'>
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true, autocomplete: 'name', class:"form-control mt-2" %>
  </div> <br>
  
  <div class='field'>
    <%= form.label :icon %>
    <%= form.text_field :icon, autofocus: true, autocomplete: 'icon', class:"form-control mt-2" %> 
  </div>

  <%= form.submit class: 'btn btn-outline-primary mt-4 w-100' %>
<% end %>