<h1>Create New Category</h1>
<% if @category.errors.any? %>
  <h2>The following errors prevent the post from being saved</h2>
  <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @categories, url: categories_path, local: true do |form| %>
  <div class='field'>
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true, autocomplete: 'name' %>
  </div> <br>
  
  <div class='field'>
    <%= form.label :icon %>
    <%= form.text_field :icon, autofocus: true, autocomplete: 'icon' %> 
  </div>

  <%= form.submit %>
<% end %>